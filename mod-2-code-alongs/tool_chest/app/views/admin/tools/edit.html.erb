<%= form_for [@user, @tool], url: admin_user_tool_path(@user, @tool), method: :patch do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :quantity %>
<%= f.text_field :quantity %>
<%= f.label :price %>
<%= f.text_field :price %>
<%= f.label :category %>
<%= select("tool", :category_id, Category.all.collect {|c| [ c.name, c.id ] }, {prompt: 'Select Category'}) %>
<%= f.submit %>
<% end %>
