<!DOCTYPE html>
<html>
<head>
  <title>ToolChest</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p>
    <% if current_user %>
      Welcome <%= current_user.username %><br/>
      <%= link_to "Log Out", logout_path, method: :delete %><br/>
    <% end %>
    <% if most_recent_tool %>
      <strong>Newest tool:</strong> <%= most_recent_tool.name %>
    <% end %>
  </p>
  <% flash.each do |type, message| %>
    <%= content_tag :div, message, class: "flash_#{type}" %>
  <% end %>
<%= yield %>

</body>
</html>
